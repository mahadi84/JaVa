**all neccesary import.

@WebServlet("/dbCheck")
public class DatabaseCheckServlet extends HttpServlet {

   private static final long serialVersionUID = 1L;
	    private Connection connection;
	    private Statement statement;

	    @Override
	    public void init() throws ServletException {
	        try {
	            Class.forName("com.mysql.cj.jdbc.Driver"); // Load the MySQL driver
	            String url = "jdbc:mysql://localhost/crud"; // Replace with your database URL
	            String user = "root"; // Replace with your username
	            String password = "Mahadi@123"; // Replace with your password
	            connection = DriverManager.getConnection(url, user, password);
	            statement = connection.createStatement();
	            //System.out.println("Database connection established in init().");

	        } catch (ClassNotFoundException | SQLException e) {
	            e.printStackTrace();
	            throw new ServletException("Database initialization failed: " + e.getMessage());
	        }
	    }

	    @Override
	    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	        response.setContentType("text/html");
	        PrintWriter out = response.getWriter();

	        try {

	            ResultSet resultSet = statement.executeQuery("SELECT * from user_info;"); // Simple query
	            out.println("<html><body>");
	            while(resultSet.next()){
	                out.println("<h1>" + resultSet.getString("name") + "</h1>");
	            } 
	            out.println("</body></html>");

	        } catch (SQLException e) {
	            e.printStackTrace();
	            out.println("<html><body>");
	            out.println("<h1>Database query failed: " + e.getMessage() + "</h1>");
	            out.println("</body></html>");
	        }
	    }

	    @Override
	    public void destroy() {
	        try {
	            if (statement != null) {
	                statement.close();
	            }
	            if (connection != null) {
	                connection.close();
	            }
	            System.out.println("Database connection closed in destroy().");
	        } catch (SQLException e) {
	            e.printStackTrace();
	            System.err.println("Error closing database connection: " + e.getMessage());
	        }
	    }
}




